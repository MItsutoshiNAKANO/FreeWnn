include @top_srcdir@/makerule.mk

INSTALL      = @INSTALL@
INSTALLFLAGS = $(INSTINCFLAGS)

all::

RKS = 1B_TOUPPER 	2A_CTRL 	2C_HANGUL.ROM 	2C_HANGUL.KEY 	2C_KSC 	3B_JEONKAK 	mode.rom 	mode.key 	mode

includes:: mode

mode:: mode.key
	$(RM) $@
	$(LN) $? $@

includes:: mode

depend:: mode

clean::
	$(RM) mode

install:: $(RKS)
	@if [ -d $(DESTDIR)$(KWNNWNNDIR)/rk ]; then set +x; \
	else (set -x; $(MKDIRHIER) $(DESTDIR)$(KWNNWNNDIR)/rk); fi
	@for flag in ${MAKEFLAGS} ''; do \
	case "$$flag" in *=*) ;; *[i]*) set +e;; esac; done; \
	for i in $(RKS); do \
	(set -x; $(INSTALL) $(INSTALLFLAGS) $(INSTDATFLAGS) $$i $(DESTDIR)$(KWNNWNNDIR)/rk); \
	done

clean::
	$(RM) mode

